<odoo>
    <record id="view_natacio_championship_list" model="ir.ui.view">
        <field name="name">natacio.championship.list</field>
        <field name="model">natacio.championship</field>
        <field name="arch" type="xml">
            <list string="Campionats">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="club_ids"/>
                <field name="swimmer_ids"/>
                <field name="ranking"/>
            </list>
        </field>
    </record>

    <record id="view_natacio_championship_form" model="ir.ui.view">
        <field name="name">natacio.championship.form</field>
        <field name="model">natacio.championship</field>
        <field name="arch" type="xml">
            <form string="Campionat">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="club_ids"/>
                        <field name="swimmer_ids"/>
                        <field name="ranking" readonly="1"/>
                    </group>
                    <field name="session_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_natacio_championship_kanban" model="ir.ui.view">
        <field name="name">natacio.championship.kanban</field>
        <field name="model">natacio.championship</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong><br/>
                            Del <field name="date_start"/> al <field name="date_end"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_natacio_championship_list" model="ir.actions.act_window">
        <field name="name">Campionats</field>
        <field name="res_model">natacio.championship</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>
