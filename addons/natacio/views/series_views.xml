<odoo>
    <!-- Vistas de Series -->
    <record id="view_series_list" model="ir.ui.view">
        <field name="name">natacio.series.list</field>
        <field name="model">natacio.series</field>
        <field name="arch" type="xml">
            <list string="Sèries">
                <field name="name"/>
                <field name="event_id"/>
            </list>
        </field>
    </record>

    <record id="view_series_form" model="ir.ui.view">
        <field name="name">natacio.series.form</field>
        <field name="model">natacio.series</field>
        <field name="arch" type="xml">
            <form string="Sèrie">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="event_id"/>
                        <field name="swimmer_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Resultats">
                            <field name="result_ids" mode="kanban,tree,form"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_natacio_series_list" model="ir.actions.act_window">
        <field name="name">Sèries</field>
        <field name="res_model">natacio.series</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
