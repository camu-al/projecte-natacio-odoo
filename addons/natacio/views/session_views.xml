<odoo>
    <!-- Vistas de Session -->
    <record id="view_session_list" model="ir.ui.view">
        <field name="name">natacio.session.list</field>
        <field name="model">natacio.session</field>
        <field name="arch" type="xml">
            <list string="Sessions">
                <field name="name"/>
                <field name="championship_id"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_session_form" model="ir.ui.view">
        <field name="name">natacio.session.form</field>
        <field name="model">natacio.session</field>
        <field name="arch" type="xml">
            <form string="SessiÃ³">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="championship_id"/>
                        <field name="date"/>
                    </group>
                    <notebook>
                        <page string="Proves">
                            <field name="event_ids" mode="kanban,tree,form"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_natacio_session_list" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">natacio.session</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
